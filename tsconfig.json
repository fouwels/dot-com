{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": [
        "@tsconfig/strictest/tsconfig.json"
    ],
    "compilerOptions": {
        "lib": [
            "es2022",
            "DOM"
        ],
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "sourceMap": true,
        "exactOptionalPropertyTypes": false, // Required for cloudscape
        "outDir": "./dist",
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "webpack.config.js"
    ],
}